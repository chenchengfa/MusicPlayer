<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/onlineBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="38dp"
        android:layout_marginTop="120dp"
        android:text="在线播放" />

    <RelativeLayout
        android:id="@+id/downRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#66222222" >

        <ImageView
            android:id="@+id/imagePlay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_play" />
  <ImageView
            android:id="@+id/imageUrl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
             android:visibility="invisible" 
            android:src="@drawable/iconfonttupian" />
        
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="爱生活， 爱音乐"
            android:textAppearance="?android:attr/textAppearanceLarge"
           />

      
        <TextView
            android:id="@+id/singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:visibility="invisible" 
                          android:layout_marginLeft="15dp"
              android:layout_toRightOf="@+id/imageUrl"
                 android:layout_alignBottom="@+id/imageUrl"
            android:text="TextView" />

        <TextView
            android:id="@+id/musicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:visibility="invisible" 
              android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageUrl"
            android:layout_alignTop="@+id/imageUrl"
            android:text="TextView" />

    </RelativeLayout>

    <Button
        android:id="@+id/recentPlayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/onlineBtn"
        android:layout_alignLeft="@+id/onlineBtn"
        android:layout_marginBottom="48dp"
        android:text="最近播放" />

    <Button
        android:id="@+id/myFavoriteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/onlineBtn"
        android:layout_alignBottom="@+id/onlineBtn"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:text="我喜欢" />
   
</RelativeLayout>
