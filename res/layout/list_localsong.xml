<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
  <ImageView
        android:id="@+id/imageLocalSong"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textLocalSong2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageLocalSong"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageLocalSong"
        android:text="TextView" />

    <TextView
        android:id="@+id/textLocalSong1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageLocalSong"
        android:layout_marginLeft="20dp"
       
        android:layout_toRightOf="@+id/imageLocalSong"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/indicator"
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
      android:background="#6600ff00"
         />
    
</RelativeLayout>
